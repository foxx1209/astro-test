---
import Layout from "../../layouts/Layout.astro";
import { getPages } from "../../library/post";

const all = getPages();
---

<Layout>
  <div class="post">
    <ul>
      {
        all.map(({ title,link,tag }) => (
          <li>
            <a href={"tag/"+link}>{title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
